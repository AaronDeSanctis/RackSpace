<Window x:Class="RackSpaceWPF.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RackSpaceWPF"
        mc:Ignorable="d"
        Title="Register" Height="400" Width="400">
    <Grid>
        <StackPanel>
            <Label Target="{Binding ElementName=UsernameTextBox}" Margin="25" FontSize="22">
                <StackPanel Orientation="Horizontal">
                    <AccessText Text="_Username:" />
                </StackPanel>
            </Label>
            <TextBox Name="UsernameTextBox" Margin="20,0,20,0" FontSize="22"/>
            <Label Target="{Binding ElementName=PasswordTextBox}" Margin="25" FontSize="22">
                <StackPanel Orientation="Horizontal">
                    <AccessText Text="_Password:" />
                </StackPanel>
            </Label>
            <PasswordBox Name="PasswordTextBox" Margin="20,0,20,0" FontSize="22"/>
            <Button Margin="20,30,20,50" Height="70" Background="RoyalBlue" FontWeight="Bold" FontSize="26" FontStyle="Italic" Foreground="White" Click="RegisterButton_Click" Name="RegisterButton">
                Register
            </Button>
        </StackPanel>
    </Grid>
</Window>
